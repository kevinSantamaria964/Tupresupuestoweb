@{
    ViewBag.Title = "Resumen Financiero";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="resumen-container">
    <h2 class="text-center mb-4">📊 Resumen Financiero</h2>

    <div class="resumen-cards">
        <div class="resumen-card ingreso">
            <h3>Ingresos</h3>
            <p class="monto">+ $3.000.000</p>
        </div>
        <div class="resumen-card gasto">
            <h3>Gastos</h3>
            <p class="monto">– $1.800.000</p>
        </div>
        <div class="resumen-card disponible">
            <h3>Disponible</h3>
            <p class="monto">$1.200.000</p>
        </div>
    </div>

    <p class="text-center mt-4">Este es un resumen visual basado en los movimientos registrados.</p>
</div>


