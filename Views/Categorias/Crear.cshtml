@model Tupresupuestoweb.Repositories.Models.CategoriaViewModel

@{
    ViewBag.Title = "Crear Categoría";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="crear-categoria-container">
    <h2>➕ Crear nueva categoría</h2>
    <p class="text-muted">Agrega una categoría personalizada para organizar tus ingresos o gastos.</p>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success">@TempData["Mensaje"]</div>
    }

    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Nombre)
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Ej: Mascotas, Viajes, Ahorros..." })
            @Html.ValidationMessageFor(m => m.Nombre)
        </div>

        <button type="submit" class="btn btn-success mt-3">Crear categoría</button>
    }
</div>


