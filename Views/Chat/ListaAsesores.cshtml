@model List<Tupresupuestoweb.Repositories.Models.Usuario>

@{
    ViewBag.Title = "Selecciona un asesor financiero";
}

<main class="content px-3 py-5"
      style="background: linear-gradient(to bottom, #e0f2f1,   /* verde menta muy suave */
    #b2dfdb,   /* aqua pastel */
    #b3e5fc,   /* azul cielo claro */
    #dcedc8    /* verde pálido */);
             min-height: 100vh; border-radius: 2rem; color: white; margin-top: 30px;">

    <div class="container" style="margin-top: -30px;">
        <!-- Encabezado profesional centrado -->
        <div class="rounded-4 p-5 mb-5 shadow-sm d-flex justify-content-center align-items-center bg-white text-center">
            <div class="d-flex flex-column flex-md-row align-items-center gap-4">
                <div class="emoji fs-1">💬</div>
                <div>
                    <h1 class="mb-0 fw-bold text-dark">Selecciona un asesor financiero</h1>
                    <h1 class="titulo-degradado">Abre una conversación con tu asesor.</h1>

                    <style>
                        .titulo-degradado {
                            font-size: 2rem;
                            font-weight: bold;
                            background: linear-gradient(90deg, #007aff, /* azul Apple */
                            #5e5ce6, /* morado */
                            #af52de, /* fucsia */
                            #ff2d55, /* rosa fuerte */
                            #ff3b30 /* rojo/naranja */
                            );
                            -webkit-background-clip: text;
                            -webkit-text-fill-color: transparent;
                            /* background-clip sin prefijo se puede omitir si da error */
                            color: transparent;
                        }
                    </style>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        @if (Model == null || !Model.Any())
        {
            <p class="fs-4 text-center">No hay asesores disponibles.</p>
        }
        else
        {
            <table class="table table-dark table-striped table-hover rounded" style="background: rgba(0,0,0,0.3);">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th class="text-center">Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var asesor in Model)
                    {
                        <tr>
                            <td class="align-middle">@asesor.Nombre</td>
                            <td class="text-center align-middle">
                                <a href="@Url.Action("Conversacion", "Chat", new { id = asesor.Id })"
                                   class="btn px-5 py-3 fw-bold shadow"
                                   style="background-color: #4caf50; color: white; border: none; border-radius: 1rem; font-size: 1.1rem;">
                                    💬 Abrir Conversación
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

</main>

