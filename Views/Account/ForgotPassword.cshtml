@{
    ViewBag.Title = "Recuperar contraseña";
}

<main class="content px-3 py-5" style=" background: linear-gradient(to bottom, #ff6666, #ff7f7f, #ff9999, #ffb3b3); min-height: 100vh; border-radius: 2rem; display: flex; justify-content: center; align-items: center; margin-top: 30px; /* quitamos margen superior para centrar bien */ ">
    <div class="login-container" style="
        background-color: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(10px);
        border-radius: 1rem;
        padding: 2rem;
        max-width: 400px;
        width: 100%;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    ">
        <h2 class="login-title" style="text-align: center; margin-bottom: 1.5rem;">Recuperar contraseña</h2>

        @if (ViewBag.Mensaje != null)
        {
            <p style="text-align:center;">@ViewBag.Mensaje</p>
        }
        else
        {
            <form asp-action="ForgotPassword" method="post">
                <label for="email">Ingresa tu correo electrónico:</label><br />
                <input type="email" name="email" required class="form-control" /><br /><br />
                <button type="submit" class="btn btn-primary w-100">Enviar enlace de recuperación</button>
            </form>
        }
    </div>
</main>




