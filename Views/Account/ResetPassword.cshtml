@model Tupresupuestoweb.Repositories.Models.ResetPasswordViewModel

<main class="content px-3 py-5" style=" background: linear-gradient(to bottom, #ff6666, #ff7f7f, #ff9999, #ffb3b3); min-height: 100vh; border-radius: 2rem; display: flex; justify-content: center; align-items: center; margin-top: 30px; ">
    <div class="login-container" style="
        background-color: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(10px);
        border-radius: 1rem;
        padding: 2rem;
        max-width: 400px;
        width: 100%;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    ">
        <h2 class="login-title" style="text-align: center; margin-bottom: 1.5rem;">Restablecer contraseña</h2>

        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("token", ViewBag.Token as string ?? "")

            <div class="form-group mb-3">
                <label for="nuevaPassword">Nueva contraseña</label>
                <input type="password" name="nuevaPassword" id="nuevaPassword" class="form-control" required />
            </div>
            <div class="form-group mb-4">
                <label for="confirmarPassword">Confirmar contraseña</label>
                <input type="password" name="confirmarPassword" id="confirmarPassword" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-primary w-100">Restablecer contraseña</button>
        }
    </div>
</main>

