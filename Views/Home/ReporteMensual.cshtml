@{
    ViewBag.Title = "Reporte Mensual";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="reporte-container">
    <h2 class="reporte-title">📊 Reporte Financiero - Abril 2025</h2>
    <p class="reporte-subtitle">Aquí tienes un resumen de tus movimientos del mes.</p>

    <div class="reporte-cards">
        <div class="card card-ingresos">
            <h3>💰 Ingresos</h3>
            <p class="valor">$3.000.000</p>
        </div>
        <div class="card card-gastos">
            <h3>💸 Gastos</h3>
            <p class="valor">$1.800.000</p>
        </div>
        <div class="card card-balance">
            <h3>📈 Balance</h3>
            <p class="valor">$1.200.000</p>
        </div>
    </div>

    <div class="mensaje-final">
        <p>✨ ¡Buen trabajo este mes! Tu balance es positivo.</p>
    </div>
</div>

