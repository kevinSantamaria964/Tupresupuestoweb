@{
    ViewBag.Title = "Testimonios";
}

<div class="container my-5">
    <h2 class="text-center mb-4" style="color: var(--primary); font-weight: 600;">Lo que dicen nuestros usuarios</h2>

    <div id="testimoniosCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner text-center p-4">
            <!-- Testimonio 1 -->
            <div class="carousel-item active">
                <blockquote class="blockquote">
                    <p class="mb-4">"Esta plataforma cambió mi manera de organizar mis finanzas. ¡Muy recomendable!"</p>
                    <footer class="blockquote-footer">María Pérez, <cite title="Profesora">Profesora</cite></footer>
                </blockquote>
            </div>
            <!-- Testimonio 2 -->
            <div class="carousel-item">
                <blockquote class="blockquote">
                    <p class="mb-4">"Me encantó la interfaz, muy intuitiva y profesional."</p>
                    <footer class="blockquote-footer">Juan Torres, <cite title="Emprendedor">Emprendedor</cite></footer>
                </blockquote>
            </div>
            <!-- Testimonio 3 -->
            <div class="carousel-item">
                <blockquote class="blockquote">
                    <p class="mb-4">"Perfecta para llevar mis cuentas al día sin complicaciones."</p>
                    <footer class="blockquote-footer">Lucía Gómez, <cite title="Diseñadora">Diseñadora</cite></footer>
                </blockquote>
            </div>
        </div>

        <!-- Botón Anterior -->
        <button class="carousel-control-prev" type="button" data-bs-target="#testimoniosCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
        </button>

        <!-- Botón Siguiente -->
        <button class="carousel-control-next" type="button" data-bs-target="#testimoniosCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Siguiente</span>
        </button>
    </div>
</div>

<!-- Incluye los archivos de Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<!-- Agrega los estilos CSS si es necesario -->
<style>
    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-color: black; /* Color del icono */
        border-radius: 50%; /* Forma redonda */
        width: 30px; /* Tamaño del icono */
        height: 30px; /* Tamaño del icono */
    }

    .carousel-control-prev,
    .carousel-control-next {
        background-color: rgba(0, 0, 0, 0.5); /* Fondo oscuro para los botones */
        border-radius: 50%; /* Botones redondeados */
    }

        .carousel-control-prev:hover,
        .carousel-control-next:hover {
            background-color: rgba(0, 0, 0, 0.8); /* Fondo oscuro cuando se pasa el cursor */
        }
</style>


